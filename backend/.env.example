# TellYouSomeday Backend Environment Variables

# Database
MONGODB_URI=mongodb://localhost:27017/tellyousomeday

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Email Service (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ENABLE_EMAIL_NOTIFICATIONS=false
TEST_RECIPIENT_EMAIL=test@example.com

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting (requests per time window)
RATE_LIMIT_CREATE_MESSAGES=5
RATE_LIMIT_SEARCH=30
RATE_LIMIT_READ=20
RATE_LIMIT_GENERAL=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Features
ENABLE_SPAM_DETECTION=true
ENABLE_CONTENT_VALIDATION=true

# For Production (DigitalOcean)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tellyousomeday
# FRONTEND_URL=https://tellyousomeday.com
# NODE_ENV=production
